@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<form asp-action="Register" method="post">
    <div>
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
    </div>

    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
    </div>

    <div>
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
    </div>

    <div>
        <label asp-for="Role"></label>
        <select asp-for="Role" class="form-control" id="roleSelect">
            <option value="">-- Select Role --</option>
            <option value="Employee">Employee</option>
            <option value="PM">Project Manager</option>
            <option value="Boss">Boss</option>
        </select>
    </div>

    <!-- Conditional UI based on Role -->
    <div id="employeeOptions" style="display: none;">
        <label for="SelectedCompanyId">Select Company:</label>
        <select asp-for="SelectedCompanyId" class="form-control">
            @* Populate with companies *@
            <option value="">-- Select Company --</option>
            @foreach (var company in Model.Companies)
            {
                <option value="@company.Id">@company.Name</option>
            }
        </select>

        <label for="SelectedPMId">Select Project Manager:</label>
        <select asp-for="SelectedPMId" class="form-control">
            <option value="">-- Select Project Manager --</option>
            @foreach (var pm in Model.PMs)
            {
                <option value="@pm.UserId">@pm.FullName</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</form>

@section Scripts {
    <script>
        $('#roleSelect').on('change', function () {
            var selectedRole = $(this).val();
            if (selectedRole === "Employee") {
                $('#employeeOptions').show();
                $('#bossOptions').hide();
            } else if (selectedRole === "Boss") {
                $('#employeeOptions').hide();
            } else {
                $('#employeeOptions, #bossOptions').hide();
            }
        });
    </script>

    <partial name="_ValidationScriptsPartial"/>
}
