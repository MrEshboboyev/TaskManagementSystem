@model NotificationDTO

<form method="post">
    <input asp-for="Id" name="notificationId" hidden />
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Request Notification Details</h1>
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Recipient Name</label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="RecipientName" class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Message</label>
            </div>
            <div class="col-10 pb-3">
                <textarea disabled asp-for="Message" class="form-control" rows="5"></textarea>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Type</label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="Type" class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Status</label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="Status" class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Created At</label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="CreatedAt" class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Sender Name</label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="SenderName" class="form-control" />
            </div>
            <div class="col-10 offset-2 mt-2">
                <a asp-action="RequestsIndex" class="btn btn-primary form-control">Back to Request</a>
            </div>
        </div>
    </div>
</form>
