@model NotificationCreateViewModel


@if (Model.Companies is not null)
{

    <div class="row">
        <div class="col-12 col-md-6 offset-md-3 pb-2">
            <h2>Select a Company to Send Notification</h2>
            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label for="companySelect">Select Company</label>
                    <select asp-for="SelectedCompanyId" class="form-control" id="companySelect">
                        <option value="">-- Select Company --</option>
                        @foreach (var company in Model.Companies)
                        {
                            <option value="@company.Id">@company.Name</option>
                        }
                    </select>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-success">Send Notification</button>
                </div>
            </form>
        </div>
    </div>
}
else
{
    <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">There are no companies yet</h4>
        <p>As companies become available, you will be notified.</p>
        <hr>
    </div>
}
